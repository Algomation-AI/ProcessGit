{{if and .IsDVSXML .DVSXMLPayload}}
<div class="dvsxml-viewer-shell tw-mb-4" data-global-init="initRepoDVSXML">
	<div class="tw-flex tw-items-center tw-justify-between tw-gap-3 tw-mb-2">
		<div class="tw-flex tw-items-center tw-gap-2">
			<span class="tw-text-xs tw-uppercase tw-text-gray-600">DVS XML</span>
			<span class="ui label">{{.DVSXMLPayload.Type}}</span>
			{{if .DVSXMLPayload.Namespace}}
				<span class="tw-text-xs tw-text-gray-600">{{.DVSXMLPayload.Namespace}}</span>
			{{end}}
		</div>
		<div class="tw-flex tw-gap-2 tw-items-center">
			{{if .DVSXMLPayload.SchemaLocation}}
				<span class="tw-text-xs tw-text-gray-600 tw-hidden sm:tw-inline">{{.DVSXMLPayload.SchemaLocation}}</span>
			{{end}}
			<a class="ui button" href="{{$.RawFileLink}}">{{ctx.Locale.Tr "repo.file_view_raw"}}</a>
		</div>
	</div>
	<div id="dvs-xml-viewer" class="dvsxml-view tw-border tw-rounded tw-p-4" data-payload-id="dvsxml-payload"></div>
	<script type="application/json" id="dvsxml-payload">{{JsonUtils.Encode .DVSXMLPayload}}</script>
</div>
{{end}}
